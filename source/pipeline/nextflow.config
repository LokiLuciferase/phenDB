

params {

    inputfolder = ''
    modelfolder = '/apps/PICA/models'
    workdir     = ''


    hmmdb                  = '/var/www/hmmdb/db/db.hmm'
    balanced_accuracy_path = "/apps/phenDB/source/pipeline/scripts/get_balanced_accuracy.py"
    accuracy_cutoff        = 0.0
    omit_nodes             = ""
    omit_models            = ["AEROBE", "AOB"]
    archaea_model_path     = 'apps/PICA/modelArchaeaBacteria'
    omit_in_archaea        = ["T3SS", "T4SS", "T6SS", "GRAMNEGATIVE"]
}

profiles {

    standard {

        process.executor = 'local'
        trace.enabled    = 'true'
        trace.file       = 'traces/phenDB_trace.txt'

    }

    cluster {

        process.executor = 'slurm'
        trace.enabled    = 'true'
        trace.file       = 'phenDB_trace.txt'

    }

}
