

params {

    inputfolder = ''
    modelfolder = '/apps/PICA/models'
    workdir     = ''


    hmmdb                  = '/apps/hmmer/db/db.hmm'
    balanced_accuracy_path = "/apps/phenDB/source/pipeline/scripts/get_balanced_accuracy.py"
    accuracy_cutoff        = 0.0
    omit_nodes             = ""
    omit_models            = ["AEROBE", "AOB"]
}

profiles {

    standard {

        process.executor = 'local'
        trace.enabled    = 'true'
        trace.file       = 'phenDB_trace.txt'

    }

    cluster {

        process.executor = 'slurm'
        trace.enabled    = 'true'
        trace.file       = 'phenDB_trace.txt'

    }

}
